---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Vazifem - Sevdiklerinizin Mezarı İçin Güvenilir Bakım Hizmeti',
  description = 'Vazifem ile sevdiklerinizin mezarları için güvenilir bakım hizmeti alın. Bölgenizdeki hizmet sağlayıcılardan teklif alın, süreci şeffaf şekilde yönetin.',
} = Astro.props;
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="mezar bakımı, mezar temizliği, kabir ziyareti, mezarlık hizmeti, güvenilir bakım, şeffaf hizmet" />
    <link rel="canonical" href="https://vazifem.com" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vazifem.com" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://vazifem.com/og-image.jpg" />
    <meta property="og:locale" content="tr_TR" />
    <meta property="og:site_name" content="Vazifem" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://vazifem.com/og-image.jpg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap&subset=latin-ext"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Vazifem",
      "description": "Sevdiklerinizin mezarları için güvenilir bakım hizmeti platformu",
      "url": "https://vazifem.com",
      "logo": "https://vazifem.com/images/logo.svg",
      "areaServed": {
        "@type": "Country",
        "name": "Türkiye"
      },
      "serviceType": ["Mezar Bakımı", "Mezar Temizliği"],
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+90-531-552-67-18",
        "email": "haldun@vazifem.com",
        "contactType": "customer service",
        "availableLanguage": "Turkish"
      }
    })} />

    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body class="bg-white text-neutral-700 font-sans antialiased">
    <slot />
  </body>
</html>
