---
const features = [
  {
    title: 'Şeffaf süreç',
    description: 'Talep oluşturmadan tamamlanmasına kadar her adımı görün.',
    icon: 'eye',
  },
  {
    title: 'Fotoğraflı teslim',
    description: 'Öncesi ve sonrası fotoğraflarla hizmetin gerçekten yapıldığından emin olun.',
    icon: 'camera',
  },
  {
    title: 'Teklif karşılaştırma',
    description: 'Birden fazla hizmet sağlayıcıdan teklif alın, en uygununu seçin.',
    icon: 'compare',
  },
];
---

<section class="py-16 sm:py-20 lg:py-28 bg-cream">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {/* Section title */}
    <div class="text-center mb-12 sm:mb-14 section-reveal">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
        Neden Vazifem?
      </h2>
    </div>

    {/* Cards */}
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 lg:gap-8">
      {features.map((feature, index) => (
        <div
          class="section-reveal group bg-white rounded-2xl p-8 shadow-sm border border-neutral-100 hover:shadow-md hover:border-primary-200 transition-all duration-300"
          style={`transition-delay: ${index * 100}ms`}
        >
          {/* Icon */}
          <div class="w-12 h-12 rounded-xl bg-primary-50 flex items-center justify-center mb-5 group-hover:bg-primary-100 transition-colors">
            {feature.icon === 'eye' && (
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            )}
            {feature.icon === 'camera' && (
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            )}
            {feature.icon === 'compare' && (
              <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>
            )}
          </div>

          <h3 class="text-lg font-semibold text-neutral-900 mb-2">
            {feature.title}
          </h3>
          <p class="text-neutral-500 text-sm leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
