---
const steps = [
  {
    number: '01',
    title: 'Bakım talebi verin',
    description: 'Mezar bilgilerini girin, ihtiyacınız olan bakım türünü seçin.',
    color: 'from-primary-400 to-primary-600',
  },
  {
    number: '02',
    title: 'Teklifleri alın',
    description: 'Bölgenizdeki hizmet sağlayıcılardan teklifleri karşılaştırın.',
    color: 'from-primary-500 to-primary-700',
  },
  {
    number: '03',
    title: 'Süreci takip edin ve onaylayın',
    description: 'Fotoğraflı ilerleme raporlarıyla süreci kontrol edin, tamamlanınca onaylayın.',
    color: 'from-primary-600 to-primary-800',
  },
];
---

<section id="nasil-calisir" class="py-16 sm:py-20 lg:py-28 bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {/* Section title */}
    <div class="text-center mb-14 sm:mb-16 section-reveal">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-neutral-900 mb-4">
        Nasıl Çalışır?
      </h2>
      <p class="text-neutral-500 text-lg max-w-xl mx-auto">
        Üç basit adımda güvenilir bakım hizmeti alın.
      </p>
    </div>

    {/* Steps */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      {steps.map((step, index) => (
        <div class="section-reveal flex flex-col items-center text-center" style={`transition-delay: ${index * 150}ms`}>
          {/* Phone mockup */}
          <div class="relative mb-8 w-48 sm:w-56">
            {/* Phone frame */}
            <div class="relative bg-neutral-900 rounded-[2rem] p-2 shadow-2xl">
              {/* Notch */}
              <div class="absolute top-0 left-1/2 -translate-x-1/2 w-20 h-5 bg-neutral-900 rounded-b-xl z-10" />
              {/* Screen */}
              <div class={`relative rounded-[1.5rem] overflow-hidden bg-gradient-to-br ${step.color} aspect-[9/16] flex flex-col items-center justify-center p-6`}>
                {/* Step number */}
                <span class="text-white/30 text-6xl font-bold mb-2">{step.number}</span>
                {/* Placeholder UI lines */}
                <div class="space-y-2 w-full">
                  <div class="h-2 bg-white/20 rounded-full w-3/4 mx-auto" />
                  <div class="h-2 bg-white/15 rounded-full w-1/2 mx-auto" />
                  <div class="h-8 bg-white/20 rounded-lg w-full mt-4" />
                  <div class="h-8 bg-white/15 rounded-lg w-full" />
                  <div class="h-10 bg-white/25 rounded-xl w-2/3 mx-auto mt-4" />
                </div>
              </div>
            </div>
            {/* Demo label */}
            <span class="absolute -bottom-3 left-1/2 -translate-x-1/2 bg-neutral-100 text-neutral-400 text-[10px] px-2 py-0.5 rounded-full whitespace-nowrap">
              Demo ekran
            </span>
          </div>

          {/* Text */}
          <div class="flex items-center gap-3 mb-3">
            <span class="flex-shrink-0 w-8 h-8 rounded-full bg-primary-100 text-primary-700 text-sm font-bold flex items-center justify-center">
              {step.number}
            </span>
            <h3 class="text-lg font-semibold text-neutral-900">{step.title}</h3>
          </div>
          <p class="text-neutral-500 text-sm leading-relaxed max-w-xs">
            {step.description}
          </p>

          {/* Connector arrow (desktop only, not on last item) */}
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute right-0 top-1/3 translate-x-1/2">
              <svg class="w-6 h-6 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
